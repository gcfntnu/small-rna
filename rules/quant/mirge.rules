#-*- mode:snakemake -*-
import shutil
import os

include:
    'mirge.db'

MIRGE_ORG = {'homo_sapiens': 'human',
           'human': 'human',
           'human': 'human',
           'mus_musculus': 'mouse',
           'mouse': 'mouse',
           'mouse': 'mouse',
           'rattus_norvegicus': 'rat',
           'rat': 'rat',
           'rat': 'rat'}

rule mirge_symlink:
    input:
        get_filtered_fastq
    params:
        outdir = os.path.abspath('data/tmp/GCF-2018-547-tmp/smallrna/mirge/fastq')
    output:
        os.path.join('data/tmp/GCF-2018-547-tmp/smallrna/mirge/fastq', '{sample}.fastq')
    run:
        import os
        src = os.path.abspath(input[0])
        dst = os.path.abspath(output[0])
        os.symlink(src, dst)
        print('symlinking: {} > {}'.format(src, dst))

rule mirge_annotate:
    input:
        fastq = expand(rules.mirge_symlink.output, sample=SAMPLES),
        db = lambda wildcards: 'data/ext/mirge/{}/index.Libs/{}_snorna.3.ebwt'.format(MIRGE_ORG[wildcards.org], MIRGE_ORG[wildcards.org])
    params:
        bp = '/home/flatberg/miniconda3/envs/mirge/bin',
        lib = 'data/ext/mirge',
        org = lambda wildcards: MIRGE_ORG[wildcards.org],
        args = '-di -ai -gff ',
        out = 'data/processed/mirge/{org}/{db}'
    output:
        'data/processed/mirge/{org}/{db}/.done'
    singularity:
        'docker://flatberg/mirge:2.0.6'
    conda:
        'envs/mirge.yaml'
    threads:
        8
    shell:
        'miRge2.0 annotate '
        '-s {input.fastq} '
        '-d {wildcards.db} '
        '-pb {params.bp} '
        '-lib {params.lib} '
        '-sp {params.org} '
        '{params.args} '
        '-cpu {threads} '
        '-o {params.out} '
