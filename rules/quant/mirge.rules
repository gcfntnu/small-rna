import shutil
import os

include:
    'mirge.db'


FASTQ_FILES = expand('data/tmp/GCF-2018-547-tmp/mirge/filtered/bioscientific/{sample}.fastq.gz', sample=SAMPLES)

rule mirge_annotate:
    input:
        fastq = FASTQ_FILES,
        db = 'data/ext/mirge/{org}/index.Libs/{org}_snorna.3.ebwt'
    params:
        bp = '/home/flatberg/miniconda3/envs/mirge/bin' ,
        lib = 'data/ext/mirge',
        args = '-di -ai -gff -spikeIn',
        out = 'data/processed/mirge/{org}/{db}'
    output:
        'data/processed/mirge/{org}/{db}/.done'
    conda:
        'envs/mirge.yaml'
    threads:
        8
    shell:
        'miRge2.0 annotate '
        '-s {input.fastq} '
        '-d {wildcards.db} '
        '-pb {params.bp} '
        '-lib {params.lib} '
        '-sp {wildcards.org} '
        '{params.args} '
        '-cpu {threads} '
        '-o {params.out} '
