#-*-mode:snakemake-*-

from os.path import join
from snakemake.workflow import srcdir

SPIKE_REF = config['filter']['spikein'].get('ref', '')   

def get_spikein_index():
    ref = SPIKE_REF.lower()
    method = config['filter']['spikein'].get('method')
    if not method in ['bowtie', 'bowtie2']:
        method = 'bowtie'
    if ref == 'ercc':
        return join(EXT_DIR, 'ERCC', 'index', 'ERCC92', method, 'ERCC92')
    elif ref == 'smallrna_calibrators':
        return join(EXT_DIR, 'smallrna_calibrators', 'index', 'calibrators.dna', method, 'calibrators.dna')
    else:
        return join(EXT_DIR, 'merged_spikein', 'index', 'merged_spikein', method, 'merged_spikein')

def get_spikein_fasta():
    ref = SPIKE_REF.lower()
    if ref == 'ercc':
        return join(EXT_DIR, 'ERCC', 'fasta', 'ERCC92.fa')
    elif ref == 'smallrna_calibrators':
        return join(EXT_DIR, 'smallrna_calibrators', 'fasta', 'calibrators.dna.fa')
    else:
        return join(EXT_DIR, 'merged_spikein', 'fasta', 'merged_spikein.fa')
    
rule merged_spikein_fasta:
    input:
        join(EXT_DIR, 'ERCC', 'fasta', 'ERCC92.fa'),
        join(EXT_DIR, 'smallrna_calibrators', 'calibrators.dna.fa')
    output:
        join(EXT_DIR, 'merged_spikein', 'fasta', 'merged_spikein.fa')

rule spikein_filter_bowtie:
    input:
        fastq = _filter_get_trimmed,
        index = get_spikein_index() + '.1.ebwt'
    output:
        fastq = join(FILTER_INTERIM, '{sample}', '{sample}.spikein.bowtie.clean.fastq'),
        counts = join(FILTER_PROCESSED, '{sample}', '{sample}.spikein.bowtie.counts')
    singularity:
        'docker://' + config['docker']['bowtie_samtools']
    params:
        args = '-n 0 -k 1 -l 18 -q --best --norc -S ',
        index = get_spikein_index()
    threads:
        4
    log:
        log = join(FILTER_INTERIM, '{sample}', 'filter.spikein.bowtie.log'),
        error = join(FILTER_INTERIM, '{sample}', 'filter.error')
    shell:
        'bowtie {params.index} '
        '{input.fastq} '
        '--un {output.fastq} '
        '-p {threads} '
        '{params.args} '
        '2>> {log.bowtie} '
        '| samtools view -q 5 -S  - | cut -f3 | sort | uniq -c  > {output.counts} '
        '2>> {log.error} '

rule spikein_filter_bowtie2:
    input:
        fastq = _filter_get_trimmed,
        index = get_spikein_index() + '.1.bt2'
    output:
        fastq = join(FILTER_INTERIM, '{sample}', '{sample}.spikein.bowtie2.clean.fastq'),
        counts = join(FILTER_PROCESSED, '{sample}', '{sample}.spikein.bowtie2.counts')
    singularity:
        'docker://' + config['docker']['bowtie2_samtools']
    params:
        args = '-D 15 -R 2 -N 0 -L 18 -i S,1,0 --norc',
        index = get_spikein_index()
    threads:
        2
    log:
        log = join(FILTER_INTERIM, '{sample}', 'filter.spikein.bowtie.log'),
        error = join(FILTER_INTERIM, '{sample}', 'filter.error')
    shell:
        'bowtie2 '
        '-U {input.fastq} '
        '--un {output.fastq} '
        '-x {params.index} '
        '-p {threads} '
        '{params.args} '
        '2>> {log.bowtie} '
        '| samtools view -S -q5 - | cut -f3 | sort | uniq -c  > {output.counts} '
        '2>> {log.error} '

def _filter_get_calibrator_clean(wildcards):
    cal = config['filter']['spikein'].get('filter', False)
    cal_quant = config['filter']['spikein'].get('method', 'unitas')
    if cal_quant == 'unitas':
        assert(config['quant'].get('method') == 'unitas')
        cal = False
    if cal:
        return join(FILTER_INTERIM, wildcards.sample, '{}.spikein.{}.clean.fastq'.format(wildcards.sample, cal_quant))
        
    return _filter_get_trimmed(wildcards)
