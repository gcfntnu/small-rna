#-*- mode:snakemake -*-
import shutil
import os

include:
    'mirge_db.rules'


FASTQ_FILES = [config['samples'][i]['R1'] for i in SAMPLES]

rule mirge_annotate:
    input:
        fastq = FASTQ_FILES,
        db = 'data/ext/mirge/{org}/index.Libs/{org}_snorna.3.ebwt'
    params:
        bp = '/home/flatberg/miniconda3/envs/mirge/bin' ,
        lib = 'data/ext/mirge',
        args = '-ad illumina -di -ai -gff',
        out = 'data/processed/mirge/{org}/{db}'
    output:
        'data/processed/mirge/{org}/{db}/test.txt'
    conda:
        'envs/mirge.yaml'
    threads:
        24
    shell:
        'miRge2.0 annotate '
        '-s {input.fastq} '
        '-d {wildcards.db} '
        '-pb {params.bp} '
        '-lib {params.lib} '
        '-sp {wildcards.org} '
        '{params.args} '
        '-cpu {threads} '
        '-o {params.out} '
