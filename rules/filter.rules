#-*- mode:snakemake -*-

def filter_get_fastq(wildcards):
    return config['samples'][int(wildcards.sample)]['R1']


rule filter_mirna_truseseq:
    input:
        fastq = filter_get_fastq
    output:
        temp('data/tmp/GCF-2018-547-tmp/mirge/filtered/trueseq/{sample}.fastq.gz')
    params:
        args = '--mirna'
    conda:
        'envs/filter.yaml'
    threads:
        4
    shell:
        'atropos trim '
        '-se {input.fastq} '
        '-o {output} '
        '-T {threads} '
        '{params.args} '

rule filter_bioscientific:
    input:
        fastq = rules.filter_mirna_truseseq.output
    output:
        temp('data/tmp/GCF-2018-547-tmp/mirge/filtered/bioscientific/{sample}.fastq.gz')
    params:
        '-f 4 -t 4 -l 17 -A'
    threads:
        4
    conda:
        'envs/filter.yaml'
    log:
        html = 'logs/{sample}/fastp.html',
        json = 'logs/{sample}/fastp.json'
    shell:
        'fastp -i {input.fastq} '
        '-o {output} '
        '{params} ' 
        '--json {log.json} '
        '--html {log.html} '
